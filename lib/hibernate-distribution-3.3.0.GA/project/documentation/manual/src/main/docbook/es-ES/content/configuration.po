"\n"
"<hibernate-configuration>\n"
"\n"
"    <!-- a SessionFactory instance listed as /jndi/name -->\n"
"    <session-factory\n"
"        name=\"java:hibernate/SessionFactory\">\n"
"\n"
"        <!-- properties -->\n"
"        <property name=\"connection.datasource\">java:/comp/env/jdbc/MyDB</"
