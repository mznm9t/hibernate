"        <generator class=\"native\"/>\n"
"    </id>\n"
"    <join table=\"PersonAddress\" \n"
"        optional=\"true\"\n"
"        inverse=\"true\">\n"
"        <key column=\"addressId\" \n"
"            unique=\"true\"/>\n"
"        <many-to-one name=\"person\"\n"
"            column=\"personId\" \n"
"            not-null=\"true\"\n"
