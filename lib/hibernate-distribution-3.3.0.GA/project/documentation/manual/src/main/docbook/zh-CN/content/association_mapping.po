#, no-c-format
msgid ""
"<![CDATA[<class name=\"Person\">\n"
"    <id name=\"id\" column=\"personId\">\n"
"        <generator class=\"native\"/>\n"
"    </id>\n"
"    <many-to-one name=\"address\" \n"
"        column=\"addressId\" \n"
"        unique=\"true\"\n"
"        not-null=\"true\"/>\n"
"</class>\n"
