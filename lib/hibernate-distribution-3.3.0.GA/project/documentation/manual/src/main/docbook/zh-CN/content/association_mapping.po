"    <id name=\"id\" column=\"personId\">\n"
"        <generator class=\"native\"/>\n"
"    </id>\n"
"    <set name=\"addresses\" table=\"PersonAddress\">\n"
"        <key column=\"personId\"/>\n"
"        <many-to-many column=\"addressId\"\n"
"            unique=\"true\"\n"
"            class=\"Address\"/>\n"
"    </set>\n"
"</class>\n"
"\n"
"<class name=\"Address\">\n"
"    <id name=\"id\" column=\"addressId\">\n"
"        <generator class=\"native\"/>\n"
"    </id>\n"
"</class>]]>"
msgstr ""

